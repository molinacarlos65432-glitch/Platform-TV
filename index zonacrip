    <script>
        const iframe = document.getElementById('inlineFrameExample');
        const serverSelect = document.getElementById('serverSelect');
        const videoUrlInput = document.getElementById('videoUrl');
        const generateIframeButton = document.getElementById('generateIframe');
        const errorMessage = document.getElementById('errorMessage');
        const successMessage = document.getElementById('successMessage');
        const codeSection = document.getElementById('codeSection');
        const iframeCodeText = document.getElementById('iframeCodeText');
        const token = 'tu_clave_secreta_2025';

        function showMessage(element, text, duration = 3000) {
            element.textContent = text;
            element.classList.add('show');
            setTimeout(() => element.classList.remove('show'), duration);
        }

        function generateUrls(server, videoUrl) {
            const iframeSrc = `https://player.blogdepelis.lat/${server}?url=${encodeURIComponent(videoUrl)}`;
            return { iframeSrc };
        }

        function updatePlayer(server, videoUrl) {
            if (!videoUrl || !/^https?:\/\//.test(videoUrl)) {
                showMessage(errorMessage, '‚úó Ingresa una URL v√°lida (https://...)');
                return;
            }
            const { iframeSrc } = generateUrls(server, videoUrl);
            iframe.src = iframeSrc;
            const iframeHtml = `<iframe id="inlineFrameExample" title="Reproductor de Video Sin Anuncios" width="800" height="450" src="${iframeSrc}" allowfullscreen></iframe>`;
            iframeCodeText.textContent = iframeHtml;
            codeSection.classList.add('show');
            errorMessage.classList.remove('show');
            showMessage(successMessage, '‚úì Video cargado correctamente');
        }

        function copyToClipboard() {
            const code = iframeCodeText.textContent;
            navigator.clipboard.writeText(code).then(() => {
                showMessage(successMessage, '‚úì C√≥digo copiado al portapapeles');
            });
        }

        generateIframeButton.addEventListener('click', () => {
            updatePlayer(serverSelect.value, videoUrlInput.value.trim());
        });

        updatePlayer(serverSelect.value, videoUrlInput.value);
    </script>

